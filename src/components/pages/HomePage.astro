---
import Layout from "../../layouts/Layout.astro";
import { useTranslations, type Lang } from "../../utils/i18n";
import Portada from "../Portada.astro";
import Skills from "../Skills.astro";
import About from "../About.astro";
import FeaturedProjects from "../FeaturedProjects.astro";
import Contact from "../Contact.astro";

export interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

// Datos dinámicos que podrías pasar como props también
const stats = {
  years: 5,
  projects: 25,
  clients: 15,
};
---

<Layout
  title={t("home.meta.title")}
  description={t("home.meta.description")}
  lang={lang}
>
  <main>
    <Portada lang={lang} />
    <About lang={lang} />
    <Skills lang={lang} />
    <FeaturedProjects lang={lang} />
    <Contact lang={lang} />
  </main>
</Layout>

<style>
  body {
    padding-top: 70px;
  }

  button {
    background: #007acc;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    transition: background 0.3s ease;
  }

  button:hover {
    background: #005999;
  }

  .stats div {
    text-align: center;
  }
</style>

---
export interface Props {
  lang: "en" | "es" | "ca";
}

const { lang } = Astro.props;

import { useTranslations } from "../utils/i18n";
const t = useTranslations(lang);

const heroTech = ["React", "TypeScript", "Next.js", "Astro", "Tailwind"];
---

<section class="hero">
  <div class="hero-container">
    <!-- Background Effects -->
    <div class="hero-background">
      <div class="gradient-orb gradient-orb-1"></div>
      <div class="gradient-orb gradient-orb-2"></div>
      <div class="grid-pattern"></div>
    </div>

    <!-- Main Content -->
    <div class="hero-content">
      <!-- Status Badge -->
      <div class="status-badge">
        <div class="status-dot"></div>
        <span>{t("home.hero.availability")}</span>
      </div>

      <!-- Main Text -->
      <div class="hero-text">
        <p class="hero-greeting">{t("home.hero.greeting")}</p>
        <h1 class="hero-name">
          <span class="name-main">{t("home.hero.name")}</span>
        </h1>
        <h2 class="hero-role">{t("home.hero.role")}</h2>
        <p class="hero-tagline">{t("home.hero.tagline")}</p>
        <p class="hero-description">{t("home.hero.description")}</p>
      </div>

      <!-- Call to Actions -->
      <div class="hero-actions">
        <a href="#projects" class="btn btn-primary">
          {t("home.hero.cta")}
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path
              d="M6 3L11 8L6 13"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </a>
        <a href="#contact" class="btn btn-secondary">
          {t("home.hero.contact")}
        </a>
      </div>

      <!-- Tech Stack Preview -->
      <div class="tech-stack">
        <p class="tech-label">{t("home.hero.techLabel")}</p>
        <div class="tech-preview">
          <div class="tech-icons">
            {heroTech.map((tech) => (
              <span class="tech-icon featured">{tech}</span>
            ))}
          </div>
          <a href="#skills" class="tech-more">
            {t("home.hero.viewAllSkills")}
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none">
              <path
                d="M3.5 7H10.5M10.5 7L7 3.5M10.5 7L7 10.5"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <span>{t("home.hero.scrollDown")}</span>
    <div class="scroll-arrow">
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
        <path
          d="M5 7.5L10 12.5L15 7.5"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
  </div>
</section>

<style lang="scss">
  @use "../_mediaqueries.scss" as *;
  @use "../styles/variables" as *;

  .hero {
    min-height: calc(100dvh - var(--navbar-height));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    position: relative;
    overflow: hidden;
    padding-top: var(--navbar-height);
  }

  .hero-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 5;

    @include md {
      padding: 0 var(--space-8);
    }
  }

  // Background Effects
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.3;
    animation: float 20s ease-in-out infinite;

    &-1 {
      width: 300px;
      height: 300px;
      background: var(--gradient-primary);
      top: 20%;
      right: 10%;
      animation-delay: 0s;
    }

    &-2 {
      width: 200px;
      height: 200px;
      background: var(--color-accent-500);
      bottom: 20%;
      left: 5%;
      animation-delay: 10s;
    }
  }

  .grid-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: linear-gradient(
        rgba(255, 255, 255, 0.02) 1px,
        transparent 1px
      ),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.5;
  }

  // Content Styles
  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 10;

    @include md {
      text-align: left;
      max-width: none;
    }
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: var(--color-surface-elevated);
    border: 1px solid var(--color-border);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-block: var(--space-8);
    backdrop-filter: blur(10px);
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: var(--color-accent-500);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  .hero-text {
    margin-bottom: var(--space-10);
  }

  .hero-greeting {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
    font-weight: var(--font-weight-medium);
  }

  .hero-name {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    margin-bottom: var(--space-4);

    .name-main {
      background: var(--gradient-text);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  }

  .hero-role {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
  }

  .hero-tagline {
    font-size: var(--font-size-xl);
    color: var(--color-primary-400);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-6);
    letter-spacing: var(--letter-spacing-wide);
  }

  .hero-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 600px;

    @include md {
      max-width: none;
    }
  }

  // Actions
  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-bottom: var(--space-12);
    position: relative;
    z-index: 15;

    @include md {
      flex-direction: row;
      gap: var(--space-6);
    }
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-md);
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-base);
    text-decoration: none !important;
    transition: all var(--transition-base);
    border: 2px solid transparent;
    min-width: 160px;
    cursor: pointer !important;

    &:hover {
      text-decoration: none !important;
      cursor: pointer !important;
    }

    &-primary {
      background: var(--gradient-primary);
      color: white;
      cursor: pointer !important;

      &:hover {
        transform: translateY(-3px) !important;
        box-shadow: var(--shadow-lg) !important;
        filter: brightness(1.2) !important;
        cursor: pointer !important;

        svg {
          transform: translateX(6px) !important;
        }
      }

      &:active {
        transform: translateY(-1px) !important;
      }
    }

    &-secondary {
      background: transparent;
      color: var(--color-text-primary);
      border-color: var(--color-border);
      cursor: pointer !important;

      &:hover {
        background: var(--color-surface-elevated) !important;
        border-color: var(--color-primary-500) !important;
        color: var(--color-primary-400) !important;
        transform: translateY(-2px) !important;
        cursor: pointer !important;
        box-shadow: 0 4px 12px rgba(98, 125, 152, 0.2) !important;
      }

      &:active {
        transform: translateY(0) !important;
      }
    }

    svg {
      transition: transform var(--transition-base);
    }
  }

  // Tech Stack
  .tech-stack {
    text-align: center;

    @include md {
      text-align: left;
    }
  }

  .tech-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-3);
    font-weight: var(--font-weight-medium);
  }

  .tech-preview {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);

    @include md {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }

  .tech-icons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    justify-content: center;

    @include md {
      justify-content: flex-start;
    }
  }

  .tech-icon {
    padding: var(--space-2) var(--space-3);
    background: var(--color-surface-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-base);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
    transition: all var(--transition-base);

    &.featured {
      background: var(--color-primary-100);
      border-color: var(--color-primary-200);
      color: var(--color-primary-700);
    }

    &:hover {
      background: var(--color-primary-200);
      border-color: var(--color-primary-300);
      color: var(--color-primary-800);
      transform: translateY(-1px);
    }
  }

  .tech-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
    color: var(--color-primary-600);
    text-decoration: none !important;
    font-weight: var(--font-weight-medium);
    transition: all var(--transition-base);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-base);

    &:hover {
      color: var(--color-primary-700);
      background: var(--color-primary-50);
      text-decoration: none !important;

      svg {
        transform: translateX(2px);
      }
    }

    svg {
      transition: transform var(--transition-base);
    }
  }

  // Scroll Indicator
  .scroll-indicator {
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-text-tertiary);
    font-size: var(--font-size-sm);
    opacity: 0.8;
    z-index: 20;
    padding-bottom: var(--space-4);
    span {
      font-weight: var(--font-weight-medium);
    }
  }

  .scroll-arrow {
    animation: bounce 2s ease-in-out infinite;
  }

  // Animations
  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
    33% {
      transform: translate(30px, -30px) rotate(120deg);
    }
    66% {
      transform: translate(-20px, 20px) rotate(240deg);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
</style>
